---
import MainLayout from './main.astro';

const { sectionTitle } = Astro.props
---

<MainLayout title="Culinaro - Your profile">
    <div class="flex space-x-24 items-start">
        <aside class="border-2 rounded-md w-40">
            <ul>
                <li id="info-tab" class="border-b-2 p-2"><a href="/profile/your-info">Your info</a></li>
                <li id="recipes-tab" class="border-b-2 p-2"><a href="/profile/your-recipes">Your recipes</a></li>
                <li id="friends-tab" class="p-2"><a href="/profile/your-friends">Your friends</a></li>
            </ul>
        </aside>
        <div id="info-section" class="w-full">
            <h1 class="font-bold text-5xl mb-8">{sectionTitle}</h1>
            <slot />
        </div>
    </div>
</MainLayout>
